{
  "version": 2,
  "framework": null,
  "buildCommand": "",
  "devCommand": "",
  "installCommand": "npm install --registry=https://registry.npmjs.org/",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 256,
      "maxDuration": 30
    }
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
