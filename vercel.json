{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEON_DATABASE_URL": "@neon_database_url",
    "NODE_ENV": "production",
    "ALLOWED_ORIGINS": "https://your-frontend-domain.vercel.app"
  }
}