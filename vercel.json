{
  "version": 2,
  "framework": null,
  "buildCommand": "",
  "devCommand": "",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 256,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "env": {
    "NEON_DATABASE_URL": "@NEON_DATABASE_URL",
    "ALLOWED_ORIGINS": "@ALLOWED_ORIGINS",
    "NODE_ENV": "production"
  }
}
