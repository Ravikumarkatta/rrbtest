# Environment variables for Neon database connection
# Copy this file to .env and fill in your actual values

# Neon Database Configuration
NEON_DATABASE_URL=postgresql://username:password@your-neon-hostname/dbname?sslmode=require

# API Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (for frontend integration)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5500,https://your-frontend-domain.com

# Optional: Database pool configuration
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000